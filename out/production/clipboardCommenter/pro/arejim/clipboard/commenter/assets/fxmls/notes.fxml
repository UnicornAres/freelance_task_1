<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<FlowPane alignment="BOTTOM_RIGHT" columnHalignment="RIGHT" maxHeight="1.7976931348623157E308"
          maxWidth="1.7976931348623157E308" rowValignment="BOTTOM" style="-fx-background-color: transparent;"
          xmlns="http://javafx.com/javafx/8.0.161" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="pro.arejim.clipboard.commenter.gui.controllers.NotesController">
    <children>
        <StackPane alignment="TOP_LEFT">
            <children>
                <VBox alignment="TOP_RIGHT" prefWidth="400.0"
                      style="-fx-background-color: #ddccff; -fx-background-radius: 20px 0 0 0;">
                    <children>
                        <Label fx:id="titleLbl" text="PROJECT_NAME" textFill="#0077ff">
                            <font>
                                <Font name="Arial Black" size="15.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                        </Label>
                        <TextArea fx:id="clipboardArea" promptText="Буфер обмена" wrapText="true">
                            <font>
                                <Font name="Arial Italic" size="14.0"/>
                            </font>
                        </TextArea>
                        <TextArea fx:id="commentArea" promptText="Коментарий" wrapText="true">
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="Arial Italic" size="14.0"/>
                            </font>
                        </TextArea>
                        <BorderPane>
                            <right>
                                <Button fx:id="saveBtn" defaultButton="true" mnemonicParsing="false"
                                        style="-fx-background-color: #00ff77;" text="Сохранить" textFill="WHITE"
                                        BorderPane.alignment="CENTER">
                                    <font>
                                        <Font name="Arial Black" size="13.0"/>
                                    </font>
                                    <BorderPane.margin>
                                        <Insets right="10.0" top="5.0"/>
                                    </BorderPane.margin>
                                </Button>
                            </right>
                            <left>
                                <Button fx:id="cancelBtn" cancelButton="true" mnemonicParsing="false"
                                        style="-fx-background-color: #ff3344;" text="Отмена" textFill="WHITE"
                                        BorderPane.alignment="CENTER">
                                    <font>
                                        <Font name="Arial Black" size="13.0"/>
                                    </font>
                                    <BorderPane.margin>
                                        <Insets left="10.0" top="5.0"/>
                                    </BorderPane.margin>
                                </Button>
                            </left>
                        </BorderPane>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
                <Button fx:id="iconfieBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="44.0"
                        style="-fx-background-color: #0077ffaa; -fx-background-radius: 20px 0 20px 0; -fx-background-image: url('pro/arejim/clipboard/commenter/assets/img/arrow.png'); -fx-background-size: 16px; -fx-background-position: center; -fx-background-repeat: stretch;"/>
            </children>
        </StackPane>
    </children>
</FlowPane>
